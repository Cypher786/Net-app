{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/db": ["packages/db"],
      "@repo/db/*": ["packages/db/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
